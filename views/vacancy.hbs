<div class="spacer"></div>
<div class="row">
    <div class="col s8">
        <h1>{{data.title}}</h1>
    </div>
    <div class="col s4 align-right">
        <p class="right-align">
            <b>Posted: </b>
            {{dateFromJSONDate data.createDate}}
        </p>
    </div>
</div>
{{#if data.locations.length}}
<div class="row">
    <div class="col s12">
        <b>Locations: </b>
        {{#each data.locations}}
        <span class="location">{{this}}</span>
        {{/each}}
    </div>
</div>
{{/if}}
{{#if data.vacancyType}}
<p class="vacancy-type">{{data.vacancyType}}</p>
{{/if}}
<div class="row">
    <div class="col s12">
        <span>Salary: </span>
        <b>{{money data.salary}}</b>
    </div>
</div>
<hr>
<div class="row">
    <div class="col s12">
        <div class="vacancy-content">{{{editorText data.text}}}</div>
    </div>
</div>
<div class="spacer"></div>

<hr>

<h4>Send your info to apply vancy:</h4>
<div class="spacer-md"></div>
<form action="/apply" method="POST" enctype="multipart/form-data">

    <div class="input-field">
        <input placeholder="Full Name" name="fullName" id="fullName" type="text" required class="validate">
        <label for="title">Full Name</label>
        <span class="helper-text" data-error="Fill Full Name"></span>
    </div>

    <div class="input-field">
        <input placeholder="E-mail" name="email" id="email" type="email" required class="validate">
        <label for="title">E-mail</label>
        <span class="helper-text" data-error="Fill E-mail"></span>
    </div>

    <div class="input-field file">
        <label for="title">Upload your CV</label>
        <p>.pdf , .doc , .docx , .png , .jpg docs only</p>
        <div><input name="cv" id="cv" type="file" class="validate"></div>
        <span class="helper-text" data-error="Please Upload your CV"></span>
    </div>

    <div class="input-field">
        <textarea placeholder="Message" name="message" id="message" required
            class="validate materialize-textarea"></textarea>
        <label for="text">Message</label>
        <span class="helper-text" data-error="Fill Message"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="vacancyId" value="{{data._id}}">

    <button class="btn green btn-secondary">Apply</button>
</form>

<div class="spacer"></div>
<hr>

{{> subscribe-form}}