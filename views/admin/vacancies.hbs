
<div class="spacer"></div>
<div class="row">
    <div class="col s8">
        <h1>Vacancies List</h1>
    </div>
    <div class="col s4">
        <a href="/admin/vacancy/add" class="btn green right">Add new vacancy</a>
    </div>
</div>

{{#if vacancies.length}}
    {{#each vacancies }}
        <div class="card hoverable">
            <div class="card-image waves-effect waves-block waves-light">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">{{title}}<i class="material-icons right">more_vert</i></span>
                <p class="right-align">Posted: {{dateFromJSONDate createDate}}</p>
                {{#if locations.length}}
                    <b>Locations: </b>
                            {{#each locations}}
                                <span class="location">{{this}}</span>
                            {{/each}}
                {{/if}}
                {{#if vacancyType}}
                    <div class="spacer-xs"></div>
                    <p class="vacancy-type">{{vacancyType}}</p>
                {{/if}}
                <p><b>{{money salary}}</b></p>
                <p><a href="/admin/vacancy/{{id}}">View</a></p>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
                <p>{{text}}</p>
            </div>
        </div>
    {{/each}}
{{else}}
<p>No Avaliable Vacancies.</p>
{{/if}}