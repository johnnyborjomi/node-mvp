<div class="spacer"></div>
<div class="row">
    <div class="col s8">
        <h1>Vacancies List</h1>
    </div>
    <div class="col s4">
        <a href="/admin/vacancy/add" class="btn green right">Add new vacancy</a>
    </div>
</div>

{{#if vacancies.length}}
{{#each vacancies }}
<div class="card hoverable">
    <div class="card-image waves-effect waves-block waves-light">
    </div>
    <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">{{title}}<i
                class="material-icons right">more_vert</i></span>
        <p class="right-align">Posted: {{dateFromJSONDate createdAt}}</p>
        {{#if locations.length}}
        <b>Locations: </b>
        {{#each locations}}
        <span class="location">{{this}}</span>
        {{/each}}
        {{/if}}
        {{#if vacancyType}}
        <div class="spacer-xs"></div>
        <p class="vacancy-type">{{vacancyType}}</p>
        {{/if}}
        <p>Salary: <b>{{money salary}}</b></p>
        <div class="spacer-md"></div>
        <div class="row">
            <div class="col s2">
                <a href="/admin/vacancy/{{id}}" class="btn hollow left">View</a>
            </div>
            <div class="col offset-s7 s2">
                <a href="/admin/vacancy/{{id}}/delete?allow=true" class="btn right">Delete</a>
            </div>
            <div class="col s1">
                <a href="/admin/vacancy/{{id}}/edit?allow=true" class="btn green right">Edit</a>
            </div>
        </div>
    </div>
    <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">{{title}}<i class="material-icons right">close</i></span>
        <p>Vacancy Text:</p>
        <p>{{text}}</p>
    </div>

</div>
{{/each}}
{{else}}
<p>No Avaliable Vacancies.</p>
{{/if}}