<h1>Our Vacancies</h1>

{{#if vacancies.length}}
    {{#each vacancies }}
        <div class="card hoverable">
            <div class="card-image waves-effect waves-block waves-light">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">{{title}}<i class="material-icons right">more_vert</i></span>
                <p class="right-align">Posted: {{dateFromJSONDate createDate}}</p>
                <p><b>{{money salary}}</b></p>
                <p><a href="/vacancies/{{id}}">Visit Page</a></p>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
                <p>{{text}}</p>
            </div>
        </div>
    {{/each}}
{{else}}
<p>No Avaliable Vacancies.</p>
{{/if}}
<div class="spacer"></div>
<h4>Subscribe to stay tuned with new vacancies:</h4>
<div class="spacer-md"></div>
<form action="/subscribe" method="POST">
    <div class="input-field">
        <input placeholder="E-mail" name="email" id="email" type="email" required class="validate">
        <label for="title">E-mail</label>
        <span class="helper-text" data-error="Fill E-mail"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Subscribe</button>
</form>
<div class="spacer"></div>
<div class="spacer"></div>
